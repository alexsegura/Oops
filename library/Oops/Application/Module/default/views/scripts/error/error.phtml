<div class="block">

<h4>An error occurred</h4>
  
	<p><strong><?php echo $this->message ?></strong></p>
	
	<?php if (isset($this->exception)): ?>
	  
	  	<p><strong>Exception information:</strong></p>
	  	<p>
	      	<b>Message:</b> <?php echo $this->exception->getMessage() ?>
